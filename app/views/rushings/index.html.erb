<p id="notice"><%= notice %></p>

<h1>Rushing</h1><br/>

<table id="rushing-table" class="display">
  <thead>
    <tr>
      <th class="hidden">ID</th>
      <th class="no-sort">Player</th>
      <th class="no-sort no-search">Team</th>
      <th class="no-sort no-search">Pos</th>
      <th class="no-sort no-search">Att/G</th>
      <th class="no-sort no-search">Att</th>
      <th class="no-search">Yds</th>
      <th class="no-sort no-search">Avg</th>
      <th class="no-sort no-search">Yds/G</th>
      <th class="no-search">TD</th>
      <th class="no-search">Lng</th>
      <th class="no-sort no-search">1st</th>
      <th class="no-sort no-search">1st%</th>
      <th class="no-sort no-search">20+</th>
      <th class="no-sort no-search">40+</th>
      <th class="no-sort no-search">FUM</th>
    </tr>
  </thead>

  <tbody>
    <% @rushings.each_with_index do |rushing, index| %>
      <tr>
        <td class="hidden"><%= index %></td>
        <td><%= rushing["Player"] %></td>
        <td><%= rushing["Team"] %></td>
        <td><%= rushing["Pos"] %></td>
        <td><%= rushing["Att/G"] %></td>
        <td><%= rushing["Att"] %></td>
        <td><%= rushing["Yds"] %></td>
        <td><%= rushing["Avg"] %></td>
        <td><%= rushing["Yds/G"] %></td>
        <td><%= rushing["TD"] %></td>
        <td data-order="<%= rushing["Lng"].to_s.gsub('T', '') %>"><%= rushing["Lng"] %></td>
        <td><%= rushing["1st"] %></td>
        <td><%= rushing["1st%"] %></td>
        <td><%= rushing["20+"] %></td>
        <td><%= rushing["40+"] %></td>
        <td><%= rushing["FUM"] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $("#rushing-table").DataTable({
    ordering: true,
    searchable: true,
    columnDefs: [
      {
        orderable: false,
        targets: "no-sort"
      },
      {
        searchable: false,
        targets: "no-search"
      }
    ],
    stripeClasses: [ "even", "odd" ],
    dom: "lfrtipB",
    buttons: [
      {
        extend: "csv",
        text: "CSV",
        exportOptions: {
          columns: ':not(:first-child)',
        }
      }
    ]
  });
</script>
